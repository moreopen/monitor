<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1
	http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>test</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<includes>
				<include>README.txt</include>
				<include>web-monitor-console-launcher</include>
				<include>web-monitor-console-shutdown</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>resources</directory>
			<outputDirectory>bin/resources</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>plugins</directory>
			<outputDirectory>bin/plugins</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>src/partner-service-webapp</directory>
			<outputDirectory>bin/src/partner-service-webapp</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>profile/test</directory>
			<excludes>
				<exclude>assembly.xml</exclude>
			</excludes>
			<outputDirectory>conf</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>target/classes</directory>
			<includes>
				<include>**/*.class</include>
			</includes>
			<outputDirectory>classes</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp</directory>
			<includes>
				<include>**/**</include>
			</includes>
			<outputDirectory>bin/src/main/webapp</outputDirectory>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<excludes>
				<exclude>com.moreopen.monitor:monitor-console</exclude>
			</excludes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>